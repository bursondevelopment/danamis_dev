<%- model_class = Alerta -%>
<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @alerta.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vocero_id) %>:</strong></dt>
  <dd><%= @alerta.vocero.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tema_id) %>:</strong></dt>
  <dd><%= @alerta.tema.full_descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @alerta.contenido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resumen) %>:</strong></dt>
  <dd><%= @alerta.resumen %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              alertas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alerta_path(@alerta), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alerta_path(@alerta),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
