<%- model_class = ProductoMarca -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_producto_marca_path,
            :class => 'btn btn-primary' %>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:producto_id) %></th>
      <th><%= model_class.human_attribute_name(:marca_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @productos_marcas.each do |producto_marca| %>
      <tr>
        <td><%= link_to producto_marca.id, producto_marca_path(producto_marca) %></td>
        <td><%= producto_marca.producto.nombre %></td>
        <td><%= producto_marca.marca.nombre %></td>
        <td><%=l producto_marca.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_producto_marca_path(producto_marca), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      producto_marca_path(producto_marca),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_producto_marca_path,
            :class => 'btn btn-primary' %>
