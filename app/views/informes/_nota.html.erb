<%- model_class = Nota -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @nota.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @nota.contenido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_nota_id) %>:</strong></dt>
  <dd><%= @nota.tipo_nota.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @nota.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:website_id) %>:</strong></dt>
  <dd><%= @nota.website.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resumen_id) %>:</strong></dt>
  <dd><%= @nota.resumen_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              notas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_nota_path(@nota), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              nota_path(@nota),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
