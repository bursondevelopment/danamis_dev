<%- model_class = Entorno -%>
<div class="page-header">
  <h1>Actividades Economicas
    <%= link_to 'Nueva',
            new_entorno_path,
            :class => 'btn btn-primary' %>

  </h1>
</div>

<%- @table_name = 'entornos'%>
<%= render partial: '/layouts/filtro_tabla' %>

<table class="table table-striped table-hover table-condensed" id="entornos">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th>Palabras Claves </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @entornos.each do |entorno| %>
      <tr>
        <td><%= link_to entorno.nombre, entorno_path(entorno) %></td>
        <td style="text-align: justify;"><%= entorno.claves.collect{|c| c.valor}.join(",") %></td>
        <td>

          <b class='tooltip-btn' data_toggle='tooltip' title='Editar Entorno'>
            <%= link_to edit_entorno_path(entorno), { :role => 'button', :class => 'btn btn-info btn-mini'} do %>
              <%= content_tag(:i, "", class: "icon-edit icon-white") %>
            <% end %>
          </b>  

          <b class='tooltip-btn' data_toggle='tooltip' title='Eliminar Entorno' >
            <%= link_to entorno_path(entorno), { :role => 'button', :class => 'btn btn-danger btn-mini', :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estas seguro de esta acción?')) }} do %>
              <%= content_tag(:i, "", class: "icon-trash icon-white") %>
            <% end %>
          </b>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva',
            new_entorno_path,
            :class => 'btn btn-primary' %>
