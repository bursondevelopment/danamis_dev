<%- model_class = Entorno -%>
<div class="page-header">
  <h2>Actividad Econ√≥mica: </h2>

<div class="form-actions">
  <h3><%= @entorno.nombre %> </h3>
    <%= link_to t('.back', :default => t("helpers.links.back")), entornos_path, :class => 'btn' %>
    <b class='tooltip-btn' data_toggle='tooltip' title= "Editar" >
      <%= link_to "", {:href => edit_entorno_path(@entorno), :class => 'btn btn-info'}, { :role => 'button'} do %>
        <%= content_tag(:i, "", class: "icon-edit icon-white") %>
      <% end %>
    </b>

</div>


<ul class="nav nav-tabs" id="TabMedios">
  <li class="active"><a href="#claves">Palabras Claves</a></li>
  <li><a href="#organizaciones">Organizaciones</a></li>
</ul>

<div class="tab-content">

  <div class="active tab-pane" id="claves">
    <%- @claves = @entorno.claves.order('created_at DESC')%>
    <%= render file:'/claves/index', layouts: false %>

      <%= link_to 'Agregar' , "javascript:void(0)", onclick: "$('#nueva_clave').show(300); $(this).hide();", class: 'btn btn-primary' %>

      <div id="nueva_clave" style="display: none;">
        <h4>Agregar Clave:</h4>
        <%= render partial: '/claves/form' %>
      </div>

  </div>
  <div class="tab-pane" id="organizaciones">
    <%- @organizaciones = @entorno.organizaciones.order(['interna_id DESC','created_at DESC']) %>
    <%= render :file =>'/organizaciones/index', :layouts => false %>
    <%= link_to t('.new', :default => t("helpers.links.new")), "#{new_organizacion_path}?entorno_id=#{@entorno.id}", :class => 'btn btn-primary' %>
  </div>
</div>



