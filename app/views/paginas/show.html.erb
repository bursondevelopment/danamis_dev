<%- model_class = Pagina -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @pagina.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:articulo) %>:</strong></dt>
  <dd><%= @pagina.articulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @pagina.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @pagina.contenido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagen) %>:</strong></dt>
  <dd><%= @pagina.imagen %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @pagina.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:website_id) %>:</strong></dt>
  <dd><%= @pagina.website_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              paginas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pagina_path(@pagina), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pagina_path(@pagina),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
