<%- if @notas.count <= 0 %>
	<h4>No se encontraron coincidencias de notas adjuntos</h4>
<% else %>

	<table class="table table-striped table-hover table-condensed">
		<thead>
			<tr>
				<th>Descripcion</th>
				<th>Seleccionar</th>
			</tr>
		</thead>
		<tbody>
			<%- @notas.each do |nota| %>
				<tr>
					<td>
						<div class="media">
							<div class="media-body">
								<h4><%= link_to nota.titulo, nota.url, :target => '_blank' %></h4>
								<%= link_to nota.medio.descripcion, nota.medio.url, :target => '_blank'%>
								<%= raw nota.descripcion_completa %>
							</div>
						</div>
					</td>
					<td><%= check_box_tag nota.id %></td>
				</tr>
			<% end -%>
		</tbody>
	</table>

<% end -%>