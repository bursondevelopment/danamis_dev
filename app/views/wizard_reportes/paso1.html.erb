<h3 class="titulo"><%= "Wizard Reportes: #{action_name} #{@titulo}" %> </h3>
<div id="wizard_bar">
	<div class="form-actions">
	    <%# link_to 'AtrÃ¡s', {action: 'paso1'}, class: 'btn' %>
	    <%# link_to 'Siguiente', 'paso3', :class => 'btn pull-right btn-primary' %>
	</div>

