<%- model_class = Medio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:logo) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:impacto) %></th>
      <th>Tipo</th>
      <th>Especialidad</th>
      <th>Adjuntos</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @medios.each do |medio| %>
      <tr>
        <td><%= link_to medio.id, medio_path(medio) %></td>
        <td><%= medio.nombre %></td>
        <td><%= medio.logo %></td>
        <td><%= medio.descripcion %></td>
        <td><%= medio.impacto %></td>
        <td><%= medio.tipo_medio.description.capitalize %></td>
        <td><%= medio.tipo_especializacion.description.capitalize %></td>
        <td><%= medio.adjuntos.count %></td>
        <td>
          <b class='tooltip-btn' data_toggle='tooltip' title='Editar Medio' >
            <%= link_to edit_medio_path(medio), { :role => 'button', :class => 'btn btn-info btn-mini'} do %>
              <%= content_tag(:i, "", class: "icon-edit icon-white") %>
            <% end %>
          </b>  

          <b class='tooltip-btn' data_toggle='tooltip' title='Eliminar Medio' >
            <%= link_to medio_path(medio), { :role => 'button', :class => 'btn btn-danger btn-mini', :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estas seguro de esta acción?')) }} do %>
              <%= content_tag(:i, "", class: "icon-trash icon-white") %>
            <% end %>
          </b>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_medio_path,
            :class => 'btn btn-primary' %>


<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('.tooltip-btn').tooltip();
  });
</script>