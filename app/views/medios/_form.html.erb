<%= form_for @medio, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field', :autofocus => true, :placeholder => "El Medio", :required => true  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field', :placeholder => "http://www.medio.com", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'text_field', :placeholder => "medio.com", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :impacto, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :impacto, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipo_medio_id, :class => 'control-label' %>
    <div class="controls">
      <%# f.number_field :tipo_medio_id, :class => 'number_field' %>
      <%= f.collection_select :tipo_medio_id, TipoMedio.all, :id, :description, {:prompt => "Medio"}, {:required => true, :style => 'width: 50%;', :onChange => "mostrar_edit();"} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipo_especializacion_id, :class => 'control-label' %>
    <div class="controls">
      <%# f.number_field :tipo_especializacion_id, :class => 'number_field' %>
      <%= f.collection_select :tipo_especializacion_id, TipoEspecializacion.order('description ASC'), :id, :description, {:prompt => "Especialidad"}, {:required => true, :style => 'width: 50%;', :onChange => "mostrar_edit();"} %>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                medios_path, :class => 'btn' %>
  </div>
<% end %>
