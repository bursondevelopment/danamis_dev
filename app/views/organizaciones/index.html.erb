<%- model_class = Organizacion -%>
<%- if controller_name.eql? 'organizaciones' %>
<div class="page-header">
  <h1><%=t @titulo %>
    <b class='tooltip-btn' data_toggle='tooltip' title='Nueva Organización' >
      <%= link_to 'Nuevo', new_organizacion_path, :class => 'btn btn-primary' %>
    </b>
  </h1>
</div>
<% end -%>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:razon_social) %></th>
      <%-unless controller_name.eql? 'entornos' %>
        <th><%= model_class.human_attribute_name(:entorno_id) %></th>
      <% end -%>
      <th><%= "Cl. #{model_class.human_attribute_name(:interna_id)}" %></th>
      <th><%= "Cl. #{model_class.human_attribute_name(:externa_id)}" %></th>
      <th><%= "Ámbito" %></th>
      <th><%= model_class.human_attribute_name(:clase_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organizaciones.each do |organizacion| %>
      <tr>
        <td><%= link_to organizacion.razon_social, organizacion_path(organizacion) %></td>
        <%-unless controller_name.eql? 'entornos' %>
          <td><%= link_to organizacion.entorno.nombre.capitalize, entorno_path(organizacion.entorno) if organizacion.entorno.nombre %></td>
        <% end -%>
        <td><%= organizacion.interna.description %></td>
        <td><%= organizacion.externa.description %></td>
        <td><%= organizacion.ambito.description %></td>
        <td><%= organizacion.clase.description %></td>
        <td>


          <%- edit_organizacion_path_temp = edit_organizacion_path(organizacion) %>
          <%- edit_organizacion_path_temp += "?entorno_id=#{organizacion.entorno_id}" if controller_name.eql? 'entornos' %>

          <b class='tooltip-btn' data_toggle='tooltip' title='Editar organizacion' >
            <%= link_to edit_organizacion_path_temp, { :role => 'button', :class => 'btn btn-info btn-mini'} do %>
              <%= content_tag(:i, "", class: "icon-edit icon-white") %>
            <% end %>
          </b>  

          <%- organizacion_path_temp = organizacion_path(organizacion) %>
          <%- organizacion_path_temp += "?entorno=#{organizacion.entorno_id}" if controller_name.eql? 'entornos' %>

          <b class='tooltip-btn' data_toggle='tooltip' title='Eliminar organizacion' >
            <%= link_to organizacion_path_temp, { :role => 'button', :class => 'btn btn-danger btn-mini', :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estas seguro de esta acción?')) }} do %>
              <%= content_tag(:i, "", class: "icon-trash icon-white") %>
            <% end %>
          </b>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%- if controller_name.eql? 'organizaciones' %>
  <b class='tooltip-btn' data_toggle='tooltip' title='Nueva Organización' >
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_organizacion_path,
                :class => 'btn btn-primary' %>
  </b>  
<% end -%>