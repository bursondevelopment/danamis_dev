<%- model_class = Organizacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:razon_social) %></th>
      <th><%= model_class.human_attribute_name(:entorno_id) %></th>
      <th><%= "Cl. #{model_class.human_attribute_name(:interna_id)}" %></th>
      <th><%= "Cl. #{model_class.human_attribute_name(:externa_id)}" %></th>
      <th><%= "Ámbito" %></th>
      <th><%= model_class.human_attribute_name(:clase_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organizaciones.each do |organizacion| %>
      <tr>
        <td><%= link_to organizacion.id, organizacion_path(organizacion) %></td>
        <td><%= organizacion.razon_social %></td>
        <td><%= organizacion.entorno.nombre.capitalize if organizacion.entorno.nombre %></td>
        <td><%= organizacion.interna.description %></td>
        <td><%= organizacion.externa.description %></td>
        <td><%= organizacion.ambito.description %></td>
        <td><%= organizacion.clase.description %></td>
        <td>
          <b class='tooltip-btn' data_toggle='tooltip' title='Editar Organizacion' >
            <%= link_to edit_organizacion_path(organizacion), { :role => 'button', :class => 'btn btn-info btn-mini'} do %>
              <%= content_tag(:i, "", class: "icon-edit icon-white") %>
            <% end %>
          </b>  

          <b class='tooltip-btn' data_toggle='tooltip' title='Eliminar Organizacion' >
            <%= link_to organizacion_path(organizacion), { :role => 'button', :class => 'btn btn-danger btn-mini', :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estas seguro de esta acción?')) }} do %>
              <%= content_tag(:i, "", class: "icon-trash icon-white") %>
            <% end %>
          </b>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<b class='tooltip-btn' data_toggle='tooltip' title='Nueva Organización' >
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_organizacion_path,
              :class => 'btn btn-primary' %>
</b>  

