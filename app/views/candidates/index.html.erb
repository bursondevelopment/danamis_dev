<div class="bs-docs-example">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
	  <tr>
	    <th>Nombre</th>
	    <th>Organización</th>
	    <th>Estado</th>
	    <th>Imagen</th>
	    <th>Opc.</th>
	
	  </tr>
    </thead>
    <tbody>
	<% @candidates.each do |candidate| %>
	  <% @tone_orga = candidate.organizacion.tolda.nombre.to_s == 'Chavismo' ? 'error' : 'info' %>
	  <tr class='<%=@tone_orga%>'>
	    <td><%= candidate.name %></td>
	    <td><%= candidate.organizacion.nombre_corto %></td>
	    <td><%= candidate.estado.nombre %></td>
	    <td><%= image_tag candidate.foto, :title => "foto", :class => "img-rounded", :style => 'width: 40px; height:40px'%></td>
		<td><%= link_to 'Detalle', candidate, :class => 'btn btn-mini' %></td>
		<td><%= link_to 'Editar', edit_candidate_path(candidate), :class => 'btn btn-mini' %></td>
		<td><%= link_to 'Eliminar', candidate, method: :delete, data: { confirm: '¿Estas Seguro?'}, :class => 'btn btn-mini btn-danger' %></td>
	  </tr>
	<% end %>
    </tbody>
  </table>
</div>

