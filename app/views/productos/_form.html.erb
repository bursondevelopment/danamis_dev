<%= form_for @producto, :html => { :class => 'form-horizontal' } do |f| %>

<b class='tooltip-btn' data_toggle='tooltip' title="Incluye múltiples productos separados por ';'. En dicho caso la descripción será igual al nombre" >

  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :nombre, :class => 'text_field', :size => '5x2', :autofocus => true, :placeholder => "Chocolate;Café;Cacao", :required => true %>

    </div>
  </div>
</b>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                productos_path, :class => 'btn' %>
  </div>
<% end %>
