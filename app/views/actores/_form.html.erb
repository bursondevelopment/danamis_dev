<%= form_for @actor, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombres, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombres, :class => 'text_field', :autofocus => true, :placeholder => "Nombres", :required => true  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cargo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cargo, :class => 'text_field', :placeholder => "Cargo", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tolda_id, :class => 'control-label' %>
    <div class="controls">
      <%# f.number_field :tolda_id, :class => 'number_field' %>
      <%= f.collection_select :tolda_id, Tolda.all, :id, :description, {:prompt => "Tolda"}, {:required => true} %>
    </div>
  </div>

  <%- if controller_name.eql? 'organizaciones' or @organizacion %>
    <%= f.hidden_field :organizacion_id%>
    <%= hidden_field_tag :organizacion, true %> 
  <% else %>
    <div class="control-group">
      <%= f.label :organizacion_id, :class => 'control-label' %>
      <div class="controls">
        <%# f.number_field :organizacion_id, :class => 'number_field' %>
        <%= f.collection_select :organizacion_id, Organizacion.order('razon_social ASC'), :id, :razon_social, {:prompt => "OrganizaciÃ³n"}, {:required => true, :class => 'selects2'} %>
      </div>
    </div>
  <% end -%>
  <div class="control-group">
    <%= f.label :representante_legal, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :representante_legal, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%- if (controller_name.eql? 'organizaciones') or @organizacion %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organizacion_path(@actor.organizacion), :class => 'btn' %>
    <% else %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                actores_path, :class => 'btn' %>
    <% end -%>
  </div>
<% end %>



