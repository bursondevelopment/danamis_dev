<%- model_class = Actor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombres) %>:</strong></dt>
  <dd><%= @actor.nombres %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cargo) %>:</strong></dt>
  <dd><%= @actor.cargo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tolda_id) %>:</strong></dt>
  <dd><%= @actor.tolda.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organizacion_id) %>:</strong></dt>
  <dd><%= @actor.organizacion.razon_social %></dd>
  <dt><strong><%= model_class.human_attribute_name(:representante_legal) %>:</strong></dt>
  <dd>

    <% if @actor.representante_legal -%>
      <i class="icon-ok"></i>
    <% end %>    

  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              organizacion_path(@actor.organizacion), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actor_path(@actor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actor_path(@actor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
