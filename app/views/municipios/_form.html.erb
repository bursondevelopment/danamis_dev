<%= form_for @municipio, :html => { :class => 'form-horizontal' } do |f| %>
<% if @municipio.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@municipio.errors.count, "error") %> impiden el registro:</h2>

    <ul>
    <% @municipio.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div class="control-group">
    <%= f.label :estado_id, :class => 'control-label' %>
    <div class="controls">
	  <%= f.collection_select :estado_id, Estado.all, :id, :nombre, {:prompt => true}, {:required => true, :class => 'selects2'}%>
		<%= f.text_field :nombre, :class => 'input-medium', :placeholder => "Nombreâ€¦", :required => true %>
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                municipios_path, :class => 'btn' %>
		</div>

  </div>
<% end %>
