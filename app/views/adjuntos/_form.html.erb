<%= form_for @adjunto, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field', :autofocus => true, :placeholder => "medio.com/nota_del_dia.html", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'text_field', :placeholder => "La Nota del Día", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sumario, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :sumario, :class => 'text_field', :size => '5x5', :placeholder => "En la nota del día..." %>
    </div>
  </div>

  <% if @medio_id %>
    <%= hidden_field_tag 'medio_id', @medio_id %>
    <%= f.hidden_field :medio_id %>
  <% else %>
    <div class="control-group">
      <%= f.label :medio_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :medio_id, Medio.order('nombre ASC'), :id, :nombre, {:prompt => "Medio"}, {:required => true} %>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :autor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :autor, :class => 'text_field', :placeholder => "Fulano de Tal" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :fecha, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fecha, :class => 'text_field', :placeholder => "Fecha sugún el medio..." %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <% if @medio_id %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), medio_path(@adjunto.medio_id), :class => 'btn' %>
    <% else %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), adjuntos_path, :class => 'btn' %>
    <% end %>

  </div>
<% end %>
