<%- model_class = Adjunto -%>
<%- unless @medio%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
<% end -%>

<%- @table_name = 'adjuntos'%>
<%= render partial: '/layouts/filtro_tabla' %>

<table class="table table-striped table-hover table-condensed" id='adjuntos'>
  <thead>
    <tr>
      <% unless @medio %>      
        <th>id</th>
      <% end %>
      <th style="width: 70%;">Descripción</th>
      <%- unless @medio %>      
      <th><%= model_class.human_attribute_name(:medio_id)%></th>
      <% end -%>
      <th> Fecha Carga</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%- @adjuntos = @adjuntos.order('created_at DESC') %>
    <% @adjuntos.each do |adjunto| %>
      <tr>
        <%- unless @medio %>
          <td><%= link_to adjunto.id, adjunto_path(adjunto)%></td>        
        <% end -%>
        <td><p style="text-align=justify;"><%= link_to raw(adjunto.descripcion),  adjunto.url, :target => '_blank' %></p></td>
        <%- unless @medio %>
          <td><%= adjunto.medio.nombre.capitalize %></td>
        <% end -%>          
        <td><%=l adjunto.created_at %></td>
        <td>
          <% if @medio %>
            <%- path = "#{edit_adjunto_path(adjunto)}?medio_id=#{@medio.id}" %>
            <%- del_path = "#{adjunto_path(adjunto)}?medio_id=#{@medio.id}" %>
          <% else %>
            <%- path = edit_adjunto_path(adjunto) %>
            <%- del_path = adjunto_path(adjunto) %>
          <% end %>
          <b class='tooltip-btn' data_toggle='tooltip' title='Ver enlace foraneo'>
            <%= link_to adjunto.url, { :role => 'button', :class => 'btn btn-success btn-mini', :target => '_blank'} do %>
              <%= content_tag(:i, "", class: "icon-share icon-white") %>
            <% end %>
          </b>

          <b class='tooltip-btn' data_toggle='tooltip' title='Eliminar Nota Adjunta' >
            <%= link_to del_path, { :role => 'button', :class => 'btn btn-danger btn-mini', :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estas seguro de esta acción?')) }} do %>
              <%= content_tag(:i, "", class: "icon-trash icon-white") %>
            <% end %>
          </b>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @medio %>
  <%- path = "#{new_adjunto_path}?medio_id=#{@medio.id}" %>
<% else %>
  <%- path = new_adjunto_path %>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            path,
            {:class => 'btn btn-primary'} %>
