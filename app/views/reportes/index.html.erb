<%- model_class = Reporte -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titulo) %></th>
      <th><%= model_class.human_attribute_name(:argumento) %></th>
      <th><%= model_class.human_attribute_name(:actor_id) %></th>
      <th><%= model_class.human_attribute_name(:informe_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reportes.each do |reporte| %>
      <tr>
        <td><%= link_to reporte.id, reporte_path(reporte) %></td>
        <td><%= reporte.titulo %></td>
        <td><%= reporte.argumento %></td>
        <td><%= reporte.actor.descripcion %></td>
        <td><%= reporte.informe_id %></td>
        <td><%=l reporte.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reporte_path(reporte), :class => 'btn btn-mini' %>
          <%# link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reporte_path(reporte),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reporte_path,
            :class => 'btn btn-primary' %>
