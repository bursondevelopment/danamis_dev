<%= form_for @clave, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= label_tag :multi, 'Â¿MultiClaves?', {:class => 'control-label'} %>
    <div class="controls">
      <%= check_box_tag :multi, true, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :valor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :valor, :class => 'text_field', :size => '5x4', :autofocus => true, :placeholder => "Incluye multiple palabras claves separadas por ';'. Recuerda activar la casilla de arriba MultiClaves.", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :incluyente, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :incluyente, :checked => true, :class => 'check_box' %>
    </div>
  </div>

<%- if controller_name.eql? 'entornos' %>
  <%= f.hidden_field :entorno_id %>
<% else %>
  <div class="control-group">
    <%= f.label :entorno_id, :class => 'control-label' %>
    <div class="controls">
      <%# f.number_field :entorno_id, :class => 'number_field' %>
      <%= f.collection_select :entorno_id, Entorno.order('nombre ASC'), :id, :nombre, {:prompt => "Entorno", :required => true}, { :class => 'selects2 span3'} %>
    </div>
  </div>
<% end -%>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                claves_path, :class => 'btn' %>
  </div>
<% end %>
