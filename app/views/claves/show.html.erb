<%- model_class = Clave -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @clave.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:incluyente) %>:</strong></dt>
  <dd><%= @clave.incluyente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entorno_id) %>:</strong></dt>
  <dd><%= @clave.entorno_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              claves_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_clave_path(@clave), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              clave_path(@clave),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
