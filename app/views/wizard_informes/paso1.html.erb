<h3 class="titulo"><%= "Wizard Informe: #{action_name} #{@titulo}" %> </h3>

<table class="table table-striped table-hover table-condensed" id="clientes">
  <thead>
    <tr>
      <th> Cliente </th>
      <th> Informes de Hoy</th>
      <th> Reportes Sin Informe</th>
      <th> Opciones </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @contexto_pais.razon_social %></td>
      <td><%= @contexto_pais.informes.creados_hoy.count %></td>
      <td><%= @contexto_pais.reportes.sin_informe.count %></td>
      <td><%= link_to 'Nuevo', {action: 'paso2_especial'}, class: 'btn btn-success' %></td>
        <td><%= raw btn_mini 'Editar el informe más reciente', "/wizard_informes/paso2_especial/#{@contexto_pais.informes.last.id}", 'btn-success', 'icon-edit' if @contexto_pais.informes.creados_hoy.count > 0 %></td>

    </tr>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.razon_social %></td>
        <td><%= cliente.informes.creados_hoy.count %></td>
        <td><%= cliente.reportes.sin_informe.count %></td>
        <td><%= link_to 'Nuevo', {action: 'paso2', cliente_id: cliente.id}, class: 'btn btn-primary' %></td>
        <td><%= raw btn_mini 'Editar el informe más reciente', "/wizard_informes/paso2/#{cliente.informes.last.id}", 'btn-info', 'icon-edit' if cliente.informes.count > 0 %></td>

      </tr>
    <% end -%>
  </tbody>
</table>
