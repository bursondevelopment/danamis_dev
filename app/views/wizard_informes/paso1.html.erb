<h3 class="titulo"><%= "Wizard Informe: #{action_name} #{@titulo}" %> </h3>

<table class="table table-striped table-hover table-condensed" id="clientes">
  <thead>
    <tr>
      <th> Cliente </th>
      <th> Informes </th>
      <th> Reportes</th>
      <th> Opciones </th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.razon_social %></td>
        <td><%= cliente.informes.creados_hoy.count %></td>
        <td><%= cliente.reportes.creados_hoy.count %></td>
        <td><%= link_to 'Nuevo Informe', {action: 'paso2', id: cliente.id}, class: 'btn btn-primary' %></td>

      </tr>
    <% end -%>
  </tbody>
</table>
