
<div>
	<p><em style="color: #4fc8ec;font-size:18pt"><%= @titulo %></em></p>
	<%- if @reportes.count > 0 %>
		<table>
		  <tbody>
		    <% @reportes.each do |reporte| %>
		      <tr>
		        <td>
					<div>
						<div style="font-family:Candara;font-size:16pt;text-align:justify;">
							<b><%= "#{reporte.actor.nombres_cargo}: #{reporte.titulo}" %></b>
							<p>
								<%= "#{reporte.argumento} " %>
								<%- reporte.adjuntos.each_with_index do |ad, i| %>
								<%= link_to ad.medio.descripcion, ad.url, {:target => '_blank'} %>
								<%= " - " if i < (reporte.adjuntos.count - 1) %>
								<% end -%>
							</p>
						</div>
					</div>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	<% else %>
		<b style="font-size:16pt">No se registraron unidades informativas</b>
	<% end -%>
	</br>
</div>
