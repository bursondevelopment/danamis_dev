<%- model_class = Candidato -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vocero_id) %>:</strong></dt>
  <dd><%= @candidato.vocero.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:eleccion_id) %>:</strong></dt>
  <dd><%= @candidato.eleccion.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:municipio_id) %>:</strong></dt>
  <dd><%= @candidato.municipio.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_cargo_id) %>:</strong></dt>
  <dd><%= @candidato.tipo_cargo.nombre %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              candidatos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_candidato_path(@candidato), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              candidato_path(@candidato),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
